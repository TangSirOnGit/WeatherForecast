<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/dailyDay"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>
    <ImageView
            android:id="@+id/dailyImage"
            android:layout_marginLeft="120dp"
            android:foregroundGravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/dailyDay"/>
    <TextView
            android:id="@+id/dailyTempMax"
            android:layout_toRightOf="@id/dailyImage"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/dailyTempMin"
            android:layout_toRightOf="@id/dailyTempMax"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"/>
</RelativeLayout>
